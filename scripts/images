if [[ ! -f /cirros.img ]]; then
    wget -O /cirros.img http://download.cirros-cloud.net/0.3.4/cirros-0.3.4-x86_64-disk.img
fi
if [[ ! -f /centos.img ]]; then
    wget -O /centos.img //cloud.centos.org/centos/7/images/CentOS-7-x86_64-GenericCloud.qcow2
fi
source /srv/salt/admin-openrc.sh
glance image-create --name "cirros" --file /cirros.img   --disk-format qcow2 --container-format bare   --visibility public --progress
glance image-create --name "centos" --file /centos.img   --disk-format qcow2 --container-format bare   --visibility public --progress
